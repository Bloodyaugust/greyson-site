<style>
  a {
    color: rgba(255, 255, 255, 0.87);
  }
  a:visited {
    color: rgba(255, 255, 255, 0.38);
  }

  body {
    background: rgb(18, 18, 18);
    color: rgba(255, 255, 255, 0.87);
    margin: 1rem;
    font-size: large;
  }

  footer {
    text-align: center;
    grid-column: span 1;
  }

  h1 {
    text-align: center;
  }

  h2 {
    margin: 0 0 1rem 0;
  }

  header {
    grid-column: span 1;
    justify-self: center;
  }

  main {
    display: grid;
    gap: 1rem;
    grid-template-columns: 100%;
    overflow: auto;
  }

  section {
    background: rgba(255, 255, 255, 0.04);
    border-radius: 4px;
    box-shadow: 2px 2px 2px 1px rgba(255, 255, 255, 0.02);
    padding: 1rem;
  }

  :global(ul) {
    margin: 0;
    padding-left: 1.2rem;
  }

  .projects-container {
    grid-column: span 1;
    justify-self: center;
  }

  @media screen and (min-width: 900px) {
    footer {
      grid-column: span 2;
    }

    header {
      grid-column: span 2;
    }

    main {
      grid-template-columns: 50% 50%;
    }

    .projects-container {
      grid-column: span 2;
    }
  }
</style>
